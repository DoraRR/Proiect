<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trainer[0].Email)
            </th>
            <th></th>
        </tr>

@page
@model GymManager.Pages.GymUsers.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Users <a asp-page="Create" class="btn btn-primary">Create</a></h1>

<p>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GymUser[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymUser[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymUser[0].Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GymUser) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                    <a asp-page="./SetWorkoutPlan" asp-route-id="@item.Id" class="btn btn-primary">Workout Plans</a>
                 @if (User.IsInRole("Admin"))
                 {
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                 }
            </td>
        </tr>
}
    </tbody>
</table>

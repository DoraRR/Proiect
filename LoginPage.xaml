<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymManagerApp.Login"
             Title="Login">
    <VerticalStackLayout 
        VerticalOptions="Center">
        <Label 
            Text="Username"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Margin="10,5" Placeholder="Username" Text="{Binding UserName}" />
        <Label 
            Text="Password"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Margin="10,5" Placeholder="Password"  Text="{Binding Password}" IsPassword="True" />

        <Button Margin="10,10" Text="Login" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>